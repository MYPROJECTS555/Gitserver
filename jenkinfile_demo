pipeline
{
    agent any
    tools
    {
      jdk 'java-11'
      maven 'maven'
    }
    stages
    {
    stage('code-checkout')
    {
      steps
      {
        git branch:'master',url:'https://github.com/shashirajraja/shopping-cart.git'
      }
    }
    stage('mvn-complie')
    {
      steps
      {
        sh 'mvn compile'
      }
    }
     stage('mvn-install')
    {
      steps
      {
        sh 'mvn clean install'
      }
    }
     stage('docker-integartion')
    {
      steps
      {
        sh 'docker pull nameisvikas/apache_container '
      }
    }
     stage('docker-container')
    {
      steps
      {
        sh 'docker run -it -d --name c1 -p 8000:8000 nameisvikas/apache_container '
      }
    }
    }
}
