pipeline
{
    agent any
    tools
    {
      jdk 'java-11'
      maven 'maven'
    }
    stages
    {
    stage('code-checkout')
    {
      steps
      {
        git branch:'main',url:'https://github.com/MYPROJECTS555/SimpleJavaCodeTest.git'
      }
    }
    stage('mvn-complie')
    {
      steps
      {
        sh 'mvn compile'
      }
    }
     stage('mvn-install')
    {
      steps
      {
        sh 'mvn clean install'
      }
    }
     stage('docker-integartion')
    {
      steps
      {
        sh 'docker build -t tomcat:v1 .'
      }
    }
    }
}
